generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

/// This model or at least one of its fields has comments in the database, and requires an additional setup for migrations: Read more: https://pris.ly/d/database-comments
model ecommerce_orders {
  order_id         BigInt    @id @default(autoincrement())
  customer_id      BigInt
  order_date       DateTime  @db.DateTime(0)
  shipping_date    DateTime? @db.DateTime(0)
  delivery_date    DateTime? @db.DateTime(0)
  product_id       String    @db.VarChar(255)
  product_name     String    @db.VarChar(255)
  quantity         Int
  unit_price       Decimal   @db.Decimal(10, 2)
  total_price      Decimal   @db.Decimal(10, 2)
  payment_method   String?   @db.VarChar(50)
  shipping_address String?   @db.VarChar(255)
  billing_address  String?   @db.VarChar(255)
  order_status     String    @db.VarChar(50)
  tracking_number  String?   @db.VarChar(100)
  courier_service  String?   @db.VarChar(100)
  customer_notes   String?   @db.Text
  internal_notes   String?   @db.Text
  created_at       DateTime  @default(now()) @db.DateTime(0)
}

/// This model or at least one of its fields has comments in the database, and requires an additional setup for migrations: Read more: https://pris.ly/d/database-comments
model local_message {
  id              BigInt   @id @default(autoincrement()) @db.UnsignedBigInt
  create_time     DateTime @default(now()) @db.DateTime(0)
  update_time     DateTime @default(now()) @db.DateTime(0)
  deleted         Int      @default(0) @db.TinyInt
  req_snapshot    String   @db.Text
  status          String   @default("INIT") @db.VarChar(16)
  biz_code        String   @default("INIT") @db.VarChar(16)
  next_retry_time BigInt   @default(0)
  retry_times     Int      @default(0)
  max_retry_times Int
  fail_reason     String?  @db.Text
}

/// This model or at least one of its fields has comments in the database, and requires an additional setup for migrations: Read more: https://pris.ly/d/database-comments
model sequence_pool_record {
  id           BigInt   @id @default(autoincrement()) @db.UnsignedBigInt
  redis_key    String   @unique(map: "uk_redis_key") @db.VarChar(64)
  last_seq_num BigInt
  create_time  DateTime @default(now()) @db.DateTime(0)
  update_time  DateTime @default(now()) @db.DateTime(0)

  @@map("tb_sequence_pool_record")
}


/// This model or at least one of its fields has comments in the database, and requires an additional setup for migrations: Read more: https://pris.ly/d/database-comments
model users{
  id            Int       @id @default(autoincrement()) @db.UnsignedInt
  email         String    @unique(map: "idx_email") @db.VarChar(100)
  password      String    @db.VarChar(60)
  name          String    @db.VarChar(50)
  phone         String?   @unique(map: "idx_phone") @db.VarChar(20)
  image         String?   @db.VarChar(255)
  created_at    DateTime  @default(now()) @db.DateTime(0)
  updated_at    DateTime  @default(now()) @db.DateTime(0)
  last_login_at DateTime? @db.DateTime(0)

  @@index([created_at], map: "idx_created_at")
  @@map("tb_users")
}
